<AnchorPane prefHeight="567.0" prefWidth="689.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="fr.eni.gestion_parking_eni_javafx.ihm.controller.GestionParkingController">
    <children>
        <TableView fx:id="tabVoitures" layoutX="31.0" layoutY="74.0" onMouseClicked="#handleSelectVoiture" prefHeight="225.0" prefWidth="369.0">
            <columns>
                <TableColumn fx:id="colDesignation" prefWidth="108.0" text="Désignaton" />
                <TableColumn fx:id="colImmatriculation" prefWidth="114.0" text="PI" />
                <TableColumn fx:id="colConducteur" prefWidth="144.0" text="Nom et Prénom" />
            </columns>
        </TableView>
        <TableView fx:id="tabConducteurs" layoutX="427.0" layoutY="74.0" onMouseClicked="#handleSelectConducteur" prefHeight="225.0" prefWidth="246.0">
            <columns>
                <TableColumn fx:id="colNom" prefWidth="122.0" text="Nom" />
                <TableColumn fx:id="colPrenom" prefWidth="121.0" text="Prénom" />
            </columns>
        </TableView>
        <Label fx:id="lblDesignation" layoutX="31.0" layoutY="333.0" text="Désignation : " />
        <Label fx:id="lblImmatriculation" layoutX="31.0" layoutY="371.0" text="Immatriculation : " />
        <Label fx:id="lblNom" layoutX="400.0" layoutY="327.0" text="Nom : " />
        <Label fx:id="lblPrenom" layoutX="400.0" layoutY="365.0" text="Prénom :" />
        <TextField fx:id="txtDesignation" layoutX="141.0" layoutY="329.0">
         <tooltip>
            <Tooltip text="Désignation de la voiture" />
         </tooltip></TextField>
        <TextField fx:id="txtImmatriculation" layoutX="141.0" layoutY="367.0">
         <tooltip>
            <Tooltip text="Immatriculation de la voiture" />
         </tooltip></TextField>
        <TextField fx:id="txtNom" layoutX="473.0" layoutY="323.0">
         <tooltip>
            <Tooltip text="Nom du conducteur" />
         </tooltip></TextField>
        <TextField fx:id="txtPrenom" layoutX="473.0" layoutY="361.0">
         <tooltip>
            <Tooltip text="Prénom du conducteur" />
         </tooltip></TextField>
        <ComboBox fx:id="cmbConducteur" layoutX="141.0" layoutY="405.0" prefWidth="150.0">
         <tooltip>
            <Tooltip text="Conducteur de la voiture" />
         </tooltip></ComboBox>
        <Button fx:id="btnAjouterVoiture" layoutX="49.0" layoutY="463.0" mnemonicParsing="false" onMouseClicked="#handleAddVoiture" text="Ajouter" />
        <Button fx:id="btnModifierVoiture" disable="true" layoutX="119.0" layoutY="463.0" mnemonicParsing="false" onMouseClicked="#updateVoiture" text="Modifier" />
        <Button fx:id="btnSupprimerVoiture" disable="true" layoutX="193.0" layoutY="463.0" mnemonicParsing="false" onMouseClicked="#deleteVoiture" text="Supprimer" />

        <ImageView fx:id="imgSaveVoiture" fitHeight="41.0" fitWidth="48.0" layoutX="304.0" layoutY="321.0" onMouseClicked="#addVoiture" pickOnBounds="true" preserveRatio="true" smooth="false" visible="false">
            <image>
                <Image url="@../../../../../img/save.png" />
            </image>
        </ImageView>

        <Button fx:id="btnAjouterConducteur" layoutX="435.0" layoutY="463.0" mnemonicParsing="false" onMouseClicked="#handleAddConducteur" text="Ajouter" />
        <Button fx:id="btnModifierConducteur" disable="true" layoutX="505.0" layoutY="463.0" mnemonicParsing="false" onMouseClicked="#updateConducteur" text="Modifier" />
        <Button fx:id="btnSupprimerConducteur" disable="true" layoutX="579.0" layoutY="463.0" mnemonicParsing="false" onMouseClicked="#deleteConducteur" text="Supprimer" />
        <Button fx:id="btnExportXML" layoutX="147.0" layoutY="522.0" mnemonicParsing="false" onMouseClicked="#handleExportXML" prefHeight="25.0" prefWidth="217.0" text="Exporter les données au format XML" />
        <Button fx:id="btnExportCSV" layoutX="381.0" layoutY="522.0" mnemonicParsing="false" onMouseClicked="#handleExportCSV" prefHeight="25.0" prefWidth="217.0" text="Exporter les données au format Excel" />
        <Label fx:id="lblTitre" layoutX="210.0" layoutY="14.0" text="Gestion du Parking " textFill="#2200ff">
            <font>
                <Font name="Calibri Bold" size="36.0" />
            </font>
        </Label>
      <ImageView fitHeight="72.0" fitWidth="72.0" layoutX="-3.0" layoutY="1.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@../../../../../img/voiture_icon.png" />
         </image>
      </ImageView>
      <ImageView fx:id="imgSaveConducteur" fitHeight="41.0" fitWidth="48.0" layoutX="633.0" layoutY="313.0" onMouseClicked="#addConducteur" pickOnBounds="true" preserveRatio="true" smooth="false" visible="false">
         <image>
            <Image url="@../../../../../img/save.png" />
         </image>
      </ImageView>
      <Label fx:id="lblConducteur" layoutX="32.0" layoutY="409.0" text="Conducteur : " />

    </children>
</AnchorPane>
